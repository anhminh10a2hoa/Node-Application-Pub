extends ../layouts/common.pug
block content
    h1 Login

    if errors
        each error in errors
            .alert.alert-danger= error

    form(method="POST")
        .form-group
            label(for="email") Name
            input#email.form-control(name="email", type="text", values=values ? values.email : '')
        .form-group
            label(for="password") Password
            input#password.form-control(name="password", type="password" values=values ? values.password : '')

        button.btn.btn-primary Login